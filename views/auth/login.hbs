<div class="auth">
  <div class="row">
    <div class="col s12">
      <ul class="tabs">
        <li class="tab col s6">
          <a href="#login" class="active">
            Войти
          </a>
        </li>
        <li class="tab col s6">
          <a href="#register">
            Регистрция
          </a>
        </li>
      </ul>
    </div>
    <div id="login" class="col s6 offset-s3">
      {{#if loginError}}
        <p class="alert">
          {{loginError}}
        </p>
      {{/if}}
      {{#if registerOk}}
        <p class="alertOk">
          {{registerOk}}
        </p>
      {{/if}}
      <h2>
        Войти в аккаунт
      </h2>
      <form action="/auth/login" method="POST">
        <div class="input-field">
          <input
            name="email"
            id="email"
            type="text"
            class="validate"
            required
          />
          <label for="email">
            Email
          </label>
          <span
            class="helper-text"
            data-error="Введите email"
            data-success="Готово"
          ></span>
        </div>
        <div class="input-field">
          <input
            name="password"
            id="password"
            type="password"
            class="validate"
            required
          />
          <label for="password">
            Пароль
          </label>
          <span
            class="helper-text"
            data-error="Введите пароль"
            data-success="Готово"
          ></span>
        </div>
        <input type="hidden" name="_csrf" value="{{csrf}}" />
        <button class="btn btn-primary" type="submit">
          Войти
        </button>
      </form>
    </div>
    <div id="register" class="col s6 offset-s3">
      {{#if registerError}}
        <p class="alert">
          {{registerError}}
        </p>
      {{/if}}
      <h2>
        Создать аккаунт
      </h2>
      <form action="/auth/register" method="POST">
        <div class="input-field">
          <input name="name" id="name" type="text" class="validate" required />
          <label for="name">
            Ваше имя
          </label>
          <span
            class="helper-text"
            data-error="Введите имя"
            data-success="Готово"
          ></span>
        </div>
        <div class="input-field">
          <input
            name="email"
            id="remail"
            type="text"
            class="validate"
            required
          />
          <label for="remail">
            Email
          </label>
          <span
            class="helper-text"
            data-error="Введите email"
            data-success="Готово"
          ></span>
        </div>
        <div class="input-field">
          <input
            name="password"
            id="rpassword"
            type="password"
            class="validate"
            required
          />
          <label for="rpassword">
            Пароль
          </label>
          <span
            class="helper-text"
            data-error="Введите пароль"
            data-success="Готово"
          ></span>
        </div>
        <div class="input-field">
          <input
            name="repeat"
            id="repeat"
            type="password"
            class="validate"
            required
          />
          <label for="repeat">
            Повторите пароль
          </label>
          <span
            class="helper-text"
            data-error="Введите пароль"
            data-success="Готово"
          ></span>
        </div>
        <input type="hidden" name="_csrf" value="{{csrf}}" />
        <button class="btn btn-primary" type="submit">
          Зарегистрироваться
        </button>
      </form>
    </div>
  </div>
</div>