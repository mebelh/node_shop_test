<h2>
  Мои заказы
</h2>
<hr />
{{#if orders.length}}
  {{#each orders}}
    <div class="row">
      <div class="col s6 offset-s3">
        <div class="card">
          <div class="card-content">
            <span class="card-title">
              Заказ
              <small>
                {{_id}}
              </small>
            </span>
            <p>
              Дата
              {{date}}
            </p>
            <p>
              <em>
                {{user.userId._id}}
              </em>
              (
              {{{user.userId.email}}}
              )
            </p>
            <ol></ol>
            <hr />
            <p>
              Цена:
              <span class="price">
                {{price}}
              </span>
            </p>
          </div>
        </div>
      </div>
    </div>
  {{/each}}
{{else}}
  <p>
    Заказов пока нет
  </p>
{{/if}}