<h2>Редактировать курс "{{course.title}}"</h2>

<form action="/courses/edit" method="POST">
    <div class="input-field col s6">
        <input name='title' id="title" type="text" class="validate" required value="{{course.title}}">
        <label for="title">Название курса</label>
        <span class="helper-text" data-error="Введите название" data-success="Готово"></span>
    </div>
    <div class="input-field col s6">
        <input name='price' id="price" type="text" class="validate" required min="1" value="{{course.price}}">
        <label for="price">Цена курса</label>
        <span class="helper-text" data-error="Введите цену" data-success="Готово"></span>
    </div>
    <div class="input-field col s6">
        <input name='img' id="img" type="text" class="validate" required value="{{course.img}}">
        <label for="img">URL картинки</label>
        <span class="helper-text" data-error="Введите URL" data-success="Готово"></span>
    </div>
    <input type="hidden" name="id" value="{{course.id}}">
    <button class="btn btn-primary">Изменить</button>
</form>