<div id="card">
    <h2>Корзина</h2>
    <hr>

    {{#if courses.length}}

    <table>
        <thead>
            <tr>
                <th>Название</th>
                <th>Количество</th>
                <th>Действия</th>
            </tr>
        </thead>
        <tbody>
            {{#each courses}}
            <tr>
                <td>{{title}}</td>
                <td>{{count}}</td>
                <td>
                    <button class="btn btn-small js-remove" data-id="{{_id}}">Удалить</button>
                </td>
            </tr>
            {{/each}}

        </tbody>

    </table>

    <p><Strong>Цена: <span class="price">{{price}}</span></Strong></p>

    {{else}}

    <p>Корзина пуста</p>

    {{/if}}
</div>