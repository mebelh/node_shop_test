<div id="card">
  <h2>
    Корзина
  </h2>
  <hr />
  {{#if courses.length}}
    <table>
      <thead>
        <tr>
          <th>
            Название
          </th>
          <th>
            Количество
          </th>
          <th>
            Действия
          </th>
        </tr>
      </thead>
      <tbody>
        {{#each courses}}
          <tr>
            <td>
              {{title}}
            </td>
            <td>
              {{count}}
            </td>
            <td>
              <button
                class="btn btn-small js-remove"
                data-id="{{id}}"
                data-csrf="{{@root.csrf}}"
              >
                Удалить
              </button>
            </td>
          </tr>
        {{/each}}
      </tbody>
    </table>
    <p>
      <Strong>
        Цена:
        <span class="price">
          {{price}}
        </span>
      </Strong>
    </p>
    <form action="/orders" method="POST">
      <button type="submit" class="btn" data-id="{{id}}">
        Сделать заказ
      </button>
      <input type="hidden" name="_csrf" value="{{csrf}}" />
      <input type="hidden" value="{{id}}" name="id" />
    </form>
  {{else}}
    <p>
      Корзина пуста
    </p>
  {{/if}}
</div>