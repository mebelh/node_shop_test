<h2>
  Добавить новый курс
</h2>
<form action="/add" method="POST">
  <div class="input-field col s6">
    <input name="title" id="title" type="text" class="validate" required />
    <label for="title">
      Название курса
    </label>
    <span
      class="helper-text"
      data-error="Введите название"
      data-success="Готово"
    ></span>
  </div>
  <div class="input-field col s6">
    <input
      name="price"
      id="price"
      type="text"
      class="validate"
      required
      min="1"
    />
    <label for="price">
      Цена курса
    </label>
    <span
      class="helper-text"
      data-error="Введите цену"
      data-success="Готово"
    ></span>
  </div>
  <div class="input-field col s6">
    <input name="img" id="img" type="text" class="validate" required />
    <label for="img">
      URL картинки
    </label>
    <span
      class="helper-text"
      data-error="Введите URL"
      data-success="Готово"
    ></span>
  </div>
  <input type="hidden" name="_csrf" value="{{csrf}}" />
  <button class="btn btn-primary">
    Добавить курс
  </button>
</form>